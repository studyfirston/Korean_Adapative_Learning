<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceCatActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="선택할 유형 개수" />

            <Spinner
                android:id="@+id/spinner_cat_num"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="64dp"
                android:entries="@array/category_num"
                android:gravity="center" />

        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_cat"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/category"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinner_cat2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/category"
            android:gravity="center"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinner_cat3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:entries="@array/category"
            android:gravity="center"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinner_prob_cat"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:entries="@array/problem_count_cat"
            android:gravity="center"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinner_prob_cat2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:entries="@array/problem_count_cat2"
            android:gravity="center"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/Two_total_spinner_prob_cat"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:entries="@array/Two_total_count_cat"
            android:gravity="center"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/Three_total_spinner_prob_cat"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:entries="@array/Three_total_count_cat"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right|bottom">
        <Button
            android:layout_margin="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go_solve_cat"
            android:text="완료" />

    </LinearLayout>

</LinearLayout>