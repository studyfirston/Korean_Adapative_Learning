<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.topikappv2">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TopikAppV2">
        <activity android:name=".SignInActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ScoringActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".SolutionActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".SolveMoActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".SolveReActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ChoiceReActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ChoiceMoActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ChoiceMoOrCatActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ChoiceCatActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".SolveCatActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".TimeActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>
</manifest>