<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.topikappv2">
    <uses-permission android:name="android.permission.INTERNET" />
    <application

        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TopikAppV2">
        <activity android:name=".SignInActivity"> </activity>
        <activity android:name=".ScoringActivity"></activity>
        <activity android:name=".SolutionActivity"></activity>
        <activity android:name=".SolveMoActivity"></activity>
        <activity android:name=".ChoiceMoActivity"></activity>
        <activity android:name=".ChoiceMoOrCatActivity"></activity>
        <activity android:name=".ChoiceCatActivity"></activity>
        <activity android:name=".SolveCatActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>
</manifest>